<h1>Listing Products</h1>

<div class="pul-right range-query">
  <%= form_tag products_path, method: :get do %>
    <%= text_field_tag 'search[price_from]', @search.price_from %>
    <%= text_field_tag 'search[price_to]', @search.price_to %>
    <%= submit_tag 'Search', class: 'btn search-button' %>
  <% end %>
</div>


